{
   "compilerOptions": {
      "target": "es2017",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": false,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "incremental": true,
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "baseUrl": ".",
      "paths": {
          "@/*": ["*"]
      }
   },
   "include": [
      "next-env.d.ts",
      "types/**/*.ts",
      "**/*.ts",
      "**/*.tsx",
      "pages/_app.ts",
      "pages/api/auth/[...nextauth].js",
      "store/store.js",
      "store/browserSlice.js",
      "api-lib/models/session.js",
      "api-lib/mongodbauth.js",
      "utils/socket/messagehandler.jsx"
   ],
   "exclude": ["node_modules"]
}
